{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": [ "ESNext", "DOM" ],
    "rootDir": ".",
    "outDir": "../dist",
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "typeRoots": [
    "../node_modules/@types"
  ],
  "exclude": [
    "./public"
  ]
}
